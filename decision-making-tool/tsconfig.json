{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
